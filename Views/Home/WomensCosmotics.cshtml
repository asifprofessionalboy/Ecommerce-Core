@model IEnumerable<Ecommerce_Project.Models.WoMensCosmoticsProduct>

<!-- product -->
<section class="best-sells-area mb-30px">
    <div class="container">
        <!-- Section Title Start -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title mt-4 ">
                    <h2>Women's Cosmotics Products</h2>
                </div>
            </div>
        </div>
        <!-- Section Title End -->
        <!-- product Carousel Start -->
        <!-- product Carousel Start -->
        <div class="best-sell-slider-2 owl-carousel owl-nav-style owl-nav-style-5">


            @foreach (var item in Model)
            {
                <!-- Single Item -->
                <article class="list-product">
                    <div class="item">
                        <div class="img-block">
                            <a href="../images/@item.Pic" class="thumbnail">
                                <img class="first-img" src="../images/@item.Pic" alt="" />
                                <img class="second-img" src="../images/@item.Pic" alt="" />
                            </a>
                            <div class="quick-view">
                                <a class="quick_view" href="" title="Add to wishlist">
                                    <i class="ion-android-favorite-outline"></i>
                                </a>

                                <a class="quick_view" href="#" data-link-action="quickview"
                                   title="Quick view" data-product-id="@item.Pid"
                                   data-product-title="@item.Title"
                                   data-product-price="@item.Price"
                                   data-product-qty="@item.Qty"
                                   data-product-pic="@item.Pic"
                                   data-product-status="@item.Status">
                                    <i class="ion-ios-search-strong"></i>
                                </a>
                            </div>
                        </div>

                        <div class="product-decs text-center">

                            <h2>
                                <a href="" class="product-link">@item.Title</a>
                            </h2>
                            <div class="rating-product">
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                                <i class="ion-android-star"></i>
                            </div>
                            <div class="pricing-meta">
                                <ul>

                                    <li class="current-price">Rs @item.Price</li>

                                </ul>
                            </div>
                        </div>
                        <div class="add-to-link-btn">
                            <a data-name="@item.Title" data-price="@item.Price" class="default-btn"> Add to cart</a>
                        </div>
                    </div>

                </article>
                <!-- Single Item -->
            }

        </div>
        <!-- product Carousel End -->
    </div>
</section>
<!-- product -->
